{
  "name": "omnikross-landing",
  "type": "module",
  "scripts": {
    "dev": "bun run dev:server & bun run dev:css",
    "dev:server": "bun --hot src/index.ts",
    "dev:css": "tailwindcss -i public/css/core.css -o dist/css/core.css --watch",
    "build": "bun run build:css",
    "build:css": "tailwindcss -i public/css/core.css -o dist/css/core.css --minify",
    "start": "bun src/index.ts"
  },
  "dependencies": {
    "hono": "^4.11.9",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.19"
  }
}
